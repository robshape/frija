{
  "env": {
    "browser": true,
    "jest": true,
    "node": true
  },
  "extends": [
    "airbnb",
    "plugin:jest/recommended",
    "plugin:jest/style",
    "plugin:react-hooks/recommended"
  ],
  "globals": {
    "artifacts": true
  },
  "overrides": [
    {
      "files": "./scripts/*.js",
      "rules": {
        "import/no-extraneous-dependencies": "off",
        "no-console": "off"
      }
    }
  ],
  "plugins": [
    "jest",
    "react-hooks"
  ],
  "rules": {
    "react/jsx-props-no-spreading": ["error", {
      "exceptions": [
        "Component",
        "Route"
      ]
    }]
  }
}
