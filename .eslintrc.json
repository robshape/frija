{
  "env": {
    "browser": true,
    "jest": true,
    "node": true
  },
  "extends": "airbnb",
  "globals": {
    "artifacts": true
  },
  "overrides": [
    {
      "files": "./scripts/*.js",
      "rules": {
        "import/no-extraneous-dependencies": "off",
        "no-console": "off"
      }
    }
  ],
  "plugins": [
    "react-hooks"
  ],
  "rules": {
    "react-hooks/exhaustive-deps": "warn",
    "react-hooks/rules-of-hooks": "error",
    "react/jsx-props-no-spreading": [
      "error",
      {
        "exceptions": [
          "Component",
          "Route"
        ]
      }
    ]
  }
}
