{
  "devDependencies": {
    "@apollo/react-testing": "3.1.4",
    "@babel/core": "7.9.0",
    "@babel/preset-env": "7.9.5",
    "@babel/preset-react": "7.9.4",
    "@testing-library/jest-dom": "5.5.0",
    "@testing-library/react": "10.0.3",
    "apollo-cache-inmemory": "1.6.5",
    "apollo-server-koa": "2.12.0",
    "apollo-server-testing": "2.12.0",
    "babel-jest": "25.5.0",
    "cypress": "4.5.0",
    "env-cmd": "10.1.0",
    "eslint": "7.0.0-rc.0",
    "eslint-config-airbnb": "18.1.0",
    "eslint-plugin-cypress": "2.10.3",
    "eslint-plugin-import": "2.20.2",
    "eslint-plugin-jest": "23.8.2",
    "eslint-plugin-json": "2.1.1",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-react": "7.19.0",
    "eslint-plugin-react-hooks": "3.0.0",
    "http-status-codes": "1.4.0",
    "identity-obj-proxy": "3.0.0",
    "jest": "25.5.0",
    "lerna": "3.20.2",
    "lighthouse": "5.6.0",
    "lodash.merge": "4.6.2",
    "markdownlint-cli": "0.22.0",
    "react": "16.13.1",
    "react-router-dom": "5.1.2",
    "solhint": "2.3.1",
    "start-server-and-test": "1.11.0",
    "stylelint": "13.3.3",
    "stylelint-config-standard": "20.0.0",
    "stylelint-scss": "3.17.1",
    "supertest": "4.0.2",
    "uuid": "7.0.3"
  },
  "private": true,
  "scripts": {
    "analyze": "./scripts/analyze-project.sh",
    "analyze:lighthouse": "lighthouse --output-path=./lighthouse.report.html --view http://localhost:8080/",
    "bootstrap": "lerna bootstrap --hoist",
    "lint": "npm run lint:md && npm run lint:json && npm run lint:sol && npm run lint:sass && npm run lint:js",
    "lint:js": "eslint --cache --config ./configs/.eslintrc.js --ext .js,.jsx ./",
    "lint:json": "eslint --cache --config ./configs/.eslintrc.js --ext .json ./",
    "lint:md": "markdownlint --config ./configs/.markdownlint.json '**/*.md'",
    "lint:sass": "stylelint --cache --config ./configs/.stylelintrc.js './packages/client/src/**/*.scss'",
    "lint:sol": "solhint --config ./configs/.solhint.js './packages/ethereum/src/contracts/**/*.sol'",
    "setup": "./scripts/setup-project.sh",
    "start": "env-cmd --file ./configs/.env.dev lerna run --parallel start",
    "start:cluster": "./scripts/start-cluster.sh",
    "test": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:coverage": "jest --config ./tests/jest.config.js --coverage",
    "test:leaks": "node --expose-gc ./node_modules/.bin/jest --config ./tests/jest.config.js --logHeapUsage --runInBand",
    "test:watch": "jest --config ./tests/jest.config.js --watch",
    "test:e2e": "start-server-and-test start:cluster http://localhost:8080/ test:e2e:ci",
    "test:e2e:ci": "cypress run --config-file ./tests/cypress.json",
    "test:e2e:gui": "cypress open --config-file ./tests/cypress.json",
    "test:integration": "jest --config ./tests/jest.config.js ./tests/integration/",
    "test:unit": "jest --config ./tests/jest.config.js ./tests/unit/"
  }
}
