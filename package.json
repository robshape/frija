{
  "devDependencies": {
    "babel-core": "6.26.3",
    "babel-loader": "7.1.5",
    "babel-preset-env": "1.7.0",
    "babel-preset-react": "6.24.1",
    "css-loader": "1.0.0",
    "eslint": "4.19.1",
    "eslint-config-airbnb": "17.0.0",
    "eslint-plugin-import": "2.13.0",
    "eslint-plugin-jsx-a11y": "6.1.1",
    "eslint-plugin-react": "7.10.0",
    "html-webpack-plugin": "3.2.0",
    "node-sass": "4.9.2",
    "nodemon": "1.18.3",
    "react-hot-loader": "4.3.4",
    "sass-loader": "7.1.0",
    "solium": "1.1.8",
    "style-loader": "0.21.0",
    "stylelint": "9.4.0",
    "stylelint-config-standard": "18.2.0",
    "truffle": "4.1.13",
    "webpack": "4.16.5",
    "webpack-cli": "3.1.0",
    "webpack-dev-server": "3.1.5"
  },
  "private": true,
  "scripts": {
    "build:ethereum": "(cd ethereum && truffle compile --all)",
    "deploy:ethereum": "(cd ethereum && truffle migrate --reset)",
    "install:client": "npm --prefix client install",
    "install:server": "npm --prefix server install",
    "lint:js": "eslint --ext .js,.jsx ./",
    "lint:sass": "stylelint './client/**/*.scss'",
    "lint:sol": "solium --dir ./ethereum/contracts",
    "postinstall": "npm run install:client && npm run install:server",
    "run:client": "webpack-dev-server",
    "run:ethereum": "(cd ethereum && truffle develop)",
    "run:server": "nodemon --watch server ./server/index.js",
    "start": "npm run run:server & npm run run:client"
  }
}
