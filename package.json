{
  "devDependencies": {
    "@apollo/client": "3.3.20",
    "@babel/core": "7.14.5",
    "@babel/preset-env": "7.14.5",
    "@babel/preset-react": "7.14.5",
    "@testing-library/jest-dom": "5.14.1",
    "@testing-library/react": "11.2.7",
    "@testing-library/user-event": "13.1.9",
    "apollo-server-koa": "2.25.1",
    "apollo-server-testing": "2.25.1",
    "babel-eslint": "10.1.0",
    "cypress": "7.5.0",
    "env-cmd": "10.1.0",
    "eslint": "7.28.0",
    "eslint-config-airbnb": "18.2.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-cypress": "2.11.3",
    "eslint-plugin-import": "2.23.4",
    "eslint-plugin-jest": "24.3.6",
    "eslint-plugin-jest-dom": "3.9.0",
    "eslint-plugin-json": "3.0.0",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-react": "7.24.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "eslint-plugin-testing-library": "4.6.0",
    "history": "5.0.0",
    "http-status-codes": "2.1.4",
    "identity-obj-proxy": "3.0.0",
    "jest": "27.0.4",
    "lerna": "4.0.0",
    "lighthouse": "8.0.0",
    "lodash.merge": "4.6.2",
    "markdownlint-cli": "0.27.1",
    "prettier": "2.3.1",
    "prop-types": "15.7.2",
    "react": "17.0.2",
    "react-router-dom": "5.2.0",
    "solhint": "3.3.6",
    "start-server-and-test": "1.12.5",
    "stylelint": "13.13.1",
    "stylelint-config-prettier": "8.0.2",
    "stylelint-config-standard": "22.0.0",
    "stylelint-scss": "3.19.0",
    "supertest": "6.1.3",
    "uuid": "8.3.2"
  },
  "name": "frija",
  "private": true,
  "scripts": {
    "analyze": "WAIT_ON_TIMEOUT=600000 start-server-and-test start:cluster http://localhost/ analyze:lighthouse && lerna run --parallel --scope @frija/client analyze:bundle",
    "analyze:lighthouse": "lighthouse --output-path=./lighthouse.report.html --view http://localhost/",
    "lint": "npm run lint:md && npm run lint:json -- --cache && npm run lint:sol && npm run lint:sass -- --cache && npm run lint:js -- --cache && npm run lint:prettier && npm run lint:license",
    "lint:js": "eslint --ext .js,.jsx ./",
    "lint:json": "eslint --ext .json ./",
    "lint:license": "./scripts/find-files-without-license.sh",
    "lint:md": "markdownlint --config ./.markdownlint.js './**/*.md' './.*/**/*.md'",
    "lint:prettier": "prettier --check .",
    "lint:sass": "stylelint --report-needless-disables './packages/client/src/**/*.scss'",
    "lint:sol": "solhint --config ./.solhint.js './packages/ethereum/src/contracts/**/*.sol'",
    "setup": "npm ci && lerna bootstrap --hoist",
    "start": "env-cmd --file ./.env.dev lerna run --parallel start",
    "start:cluster": "./scripts/start-cluster.sh",
    "test": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:coverage": "jest --config ./tests/configs/jest.config.js --coverage",
    "test:leaks": "node --expose-gc ./node_modules/.bin/jest --config ./tests/configs/jest.config.js --detectOpenHandles --logHeapUsage --runInBand",
    "test:watch": "jest --config ./tests/jest.config.js --watch",
    "test:e2e": "WAIT_ON_TIMEOUT=600000 start-server-and-test start:cluster http://localhost/ test:e2e:cli",
    "test:e2e:cli": "cypress run --config-file ./tests/configs/cypress.config.json",
    "test:e2e:gui": "cypress open --config-file ./tests/configs/cypress.config.json",
    "test:integration": "jest --config ./tests/configs/jest.config.js ./tests/suites/integration/",
    "test:unit": "jest --config ./tests/configs/jest.config.js ./tests/suites/unit/"
  },
  "version": "0.1.0"
}
