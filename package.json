{
  "devDependencies": {
    "babel-core": "6.26.0",
    "babel-loader": "7.1.3",
    "babel-preset-env": "1.6.1",
    "babel-preset-react": "6.24.1",
    "css-loader": "0.28.10",
    "eslint": "4.18.2",
    "eslint-config-airbnb": "16.1.0",
    "eslint-plugin-import": "2.9.0",
    "eslint-plugin-jsx-a11y": "6.0.3",
    "eslint-plugin-react": "7.7.0",
    "html-webpack-plugin": "3.0.4",
    "node-sass": "4.7.2",
    "nodemon": "1.17.1",
    "sass-lint": "1.12.1",
    "sass-loader": "6.0.7",
    "solium": "1.1.5",
    "style-loader": "0.20.2",
    "truffle": "4.1.0",
    "webpack": "4.0.1",
    "webpack-cli": "2.0.10",
    "webpack-dev-server": "3.1.0"
  },
  "private": true,
  "scripts": {
    "build:ethereum": "(cd ethereum && truffle compile --all)",
    "deploy:ethereum": "(cd ethereum && truffle migrate --reset)",
    "install:client": "npm --prefix client install",
    "install:server": "npm --prefix server install",
    "lint:js": "eslint --ext .js,.jsx --ignore-pattern '**/node_modules' ./",
    "lint:scss": "sass-lint --config .sasslintrc.json --ignore '**/node_modules/**/*.scss' --verbose 'client/**/*.scss'",
    "lint:sol": "solium --dir ethereum/contracts",
    "postinstall": "npm run install:client && npm run install:server",
    "run:client": "webpack-dev-server",
    "run:ethereum": "(cd ethereum && truffle develop)",
    "run:server": "nodemon --watch server server/index.js",
    "start": "npm run run:server & npm run run:client",
    "test:lint": "npm run lint:js && npm run lint:scss && npm run lint:sol"
  }
}
