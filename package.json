{
  "devDependencies": {
    "@apollo/client": "3.0.0-beta.44",
    "@babel/core": "7.10.5",
    "@babel/preset-env": "7.10.4",
    "@babel/preset-react": "7.10.4",
    "@testing-library/jest-dom": "5.11.1",
    "@testing-library/react": "10.4.7",
    "@testing-library/user-event": "12.0.12",
    "apollo-server-koa": "2.16.0",
    "apollo-server-testing": "2.16.0",
    "babel-eslint": "10.1.0",
    "babel-jest": "26.1.0",
    "cypress": "4.11.0",
    "env-cmd": "10.1.0",
    "eslint": "7.5.0",
    "eslint-config-airbnb": "18.2.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-cypress": "2.11.1",
    "eslint-plugin-import": "2.22.0",
    "eslint-plugin-jest": "23.18.0",
    "eslint-plugin-jest-dom": "3.1.4",
    "eslint-plugin-json": "2.1.1",
    "eslint-plugin-jsx-a11y": "6.3.1",
    "eslint-plugin-react": "7.20.3",
    "eslint-plugin-react-hooks": "4.0.8",
    "eslint-plugin-testing-library": "3.3.2",
    "history": "5.0.0",
    "http-status-codes": "1.4.0",
    "identity-obj-proxy": "3.0.0",
    "jest": "26.1.0",
    "lerna": "3.22.1",
    "lighthouse": "6.1.1",
    "lodash.merge": "4.6.2",
    "markdownlint-cli": "0.23.2",
    "prettier": "2.0.5",
    "prop-types": "15.7.2",
    "react": "16.13.1",
    "react-router-dom": "5.2.0",
    "solhint": "3.1.0",
    "start-server-and-test": "1.11.2",
    "stylelint": "13.6.1",
    "stylelint-config-prettier": "8.0.2",
    "stylelint-config-standard": "20.0.0",
    "stylelint-scss": "3.18.0",
    "supertest": "4.0.2",
    "uuid": "8.2.0"
  },
  "name": "frija",
  "private": true,
  "scripts": {
    "analyze": "start-server-and-test start:cluster http://localhost/ analyze:lighthouse && lerna run --parallel --scope @frija/client analyze:bundle",
    "analyze:lighthouse": "lighthouse --output-path=./lighthouse.report.html --view http://localhost/",
    "lint": "npm run lint:md && npm run lint:json -- --cache && npm run lint:sol && npm run lint:sass -- --cache && npm run lint:js -- --cache && npm run lint:prettier && npm run lint:license",
    "lint:js": "eslint --config ./configs/.eslintrc.js --ext .js,.jsx ./",
    "lint:json": "eslint --config ./configs/.eslintrc.js --ext .json ./",
    "lint:license": "./scripts/find-files-without-license.sh",
    "lint:md": "markdownlint --config ./configs/.markdownlint.js './**/*.md' './.*/**/*.md'",
    "lint:prettier": "prettier --check --config ./configs/.prettierrc.js .",
    "lint:sass": "stylelint --config ./configs/.stylelintrc.js --report-needless-disables './packages/client/src/**/*.scss'",
    "lint:sol": "solhint --config ./configs/.solhint.js './packages/ethereum/src/contracts/**/*.sol'",
    "setup": "npm ci && lerna bootstrap --hoist",
    "start": "env-cmd --file ./configs/.env.dev lerna run --parallel start",
    "start:cluster": "./scripts/start-cluster.sh",
    "test": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:coverage": "jest --config ./tests/configs/jest.config.js --coverage",
    "test:leaks": "node --expose-gc ./node_modules/.bin/jest --config ./tests/configs/jest.config.js --detectOpenHandles --logHeapUsage --runInBand",
    "test:watch": "jest --config ./tests/jest.config.js --watch",
    "test:e2e": "start-server-and-test start:cluster http://localhost/ test:e2e:cli",
    "test:e2e:cli": "cypress run --config-file ./tests/configs/cypress.config.json",
    "test:e2e:gui": "cypress open --config-file ./tests/configs/cypress.config.json",
    "test:integration": "jest --config ./tests/configs/jest.config.js ./tests/suites/integration/",
    "test:unit": "jest --config ./tests/configs/jest.config.js ./tests/suites/unit/"
  },
  "version": "0.1.0"
}
