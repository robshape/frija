{
  "devDependencies": {
    "@apollo/react-testing": "3.1.4",
    "@babel/core": "7.9.0",
    "@babel/preset-env": "7.9.5",
    "@babel/preset-react": "7.9.4",
    "@testing-library/jest-dom": "5.5.0",
    "@testing-library/react": "10.0.2",
    "apollo-cache-inmemory": "1.6.5",
    "apollo-server-koa": "2.12.0",
    "apollo-server-testing": "2.12.0",
    "babel-jest": "25.3.0",
    "env-cmd": "10.1.0",
    "eslint": "7.0.0-alpha.3",
    "eslint-config-airbnb": "18.1.0",
    "eslint-plugin-import": "2.20.2",
    "eslint-plugin-jest": "23.8.2",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-react": "7.19.0",
    "eslint-plugin-react-hooks": "3.0.0",
    "http-status-codes": "1.4.0",
    "identity-obj-proxy": "3.0.0",
    "jest": "25.3.0",
    "lerna": "3.20.2",
    "lodash.merge": "4.6.2",
    "markdownlint-cli": "0.22.0",
    "react": "16.13.1",
    "react-router-dom": "5.1.2",
    "solhint": "2.3.1",
    "stylelint": "13.3.2",
    "stylelint-config-standard": "20.0.0",
    "stylelint-scss": "3.17.0",
    "supertest": "4.0.2",
    "uuid": "7.0.3"
  },
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap --hoist",
    "lint": "npm run lint:js && npm run lint:md && npm run lint:sass && npm run lint:sol",
    "lint:js": "eslint --cache --config ./configs/.eslintrc.js --ext .js,.jsx ./",
    "lint:md": "markdownlint --config ./configs/.markdownlint.json '**/*.md'",
    "lint:sass": "stylelint --cache --config ./configs/.stylelintrc.js './packages/client/src/**/*.scss'",
    "lint:sol": "solhint --config ./configs/.solhint.js './packages/ethereum/src/contracts/**/*.sol'",
    "setup": "./scripts/setup-project.sh",
    "start": "env-cmd --file ./configs/.env.dev.js lerna run --parallel start",
    "test": "jest --config ./tests/jest.config.js",
    "test:coverage": "npm test -- --coverage",
    "test:leaks": "node --expose-gc ./node_modules/.bin/jest --config ./tests/jest.config.js --logHeapUsage --runInBand",
    "test:watch": "npm test -- --watch"
  }
}
